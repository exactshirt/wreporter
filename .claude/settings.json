{
  "permissions": {
    "allow": [
      "Bash(pytest:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(reflex:*)",
      "Bash(git status)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(echo:*)",
      "Bash(black:*)",
      "Bash(type:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(del /F /S:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python -m black \"$CLAUDE_TOOL_INPUT_FILE\" 2>nul & exit 0"
          }
        ]
      }
    ]
  }
}
